{
    "id": "project",
    "name": "Fiche Projet (SI)",
    "category": "Projets",
    "thumbnail": "https://via.placeholder.com/400x250?text=Projet",
    "schema": [
      { "key": "project_name", "label": "Nom du projet", "type": "text", "required": true },
      { "key": "project_objectives", "label": "Objectifs (liste)", "type": "list<string>", "required": true },
      { "key": "total_budget_xaf", "label": "Budget total (XAF)", "type": "number", "required": true, "integer": true },
      { "key": "funding_requested_xaf", "label": "Financement demandé (XAF)", "type": "number", "required": true, "integer": true },
      { "key": "project_timeline.start_date", "label": "Début (YYYY-MM-DD)", "type": "date", "required": true },
      { "key": "project_timeline.end_date", "label": "Fin (YYYY-MM-DD)", "type": "date", "required": true },
      { "key": "project_timeline.duration_months", "label": "Durée (mois)", "type": "number", "required": true, "integer": true }
    ],
    "defaults": {
      "fontFamily": "\"Times New Roman\", Times, serif",
      "fontSize": 12,
      "lineHeight": 1.5,
      "accent": "#d32f2f"
    },
    "template": "<div class=\"w-[210mm] min-h-[297mm] mx-auto p-12 bg-white text-black\"><div class=\"text-center mb-6\"><h1 class=\"text-2xl font-semibold\">Résumé du Projet</h1><div class=\"h-0.5 w-40 mx-auto mt-3\" style=\"background: {{accent}}\"></div></div><p class=\"mb-2\"><span class=\"font-semibold\">Nom du projet : </span>{{project_name}}</p><p class=\"mb-2\"><span class=\"font-semibold\">Période : </span>du {{start_date}} au {{end_date}} ({{duration_months}} mois)</p><div class=\"mt-4\"><h2 class=\"text-lg font-semibold mb-2\">Objectifs</h2><ul class=\"list-disc pl-6\">{{project_objectives_list}}</ul></div><div class=\"mt-6 grid grid-cols-2 gap-6\"><div class=\"p-4 border border-gray-300 rounded\"><div class=\"text-xs uppercase opacity-70\">Budget total</div><div class=\"text-xl font-semibold\">{{total_budget_xaf_fmt}} XAF</div></div><div class=\"p-4 border border-gray-300 rounded\"><div class=\"text-xs uppercase opacity-70\">Demande de financement</div><div class=\"text-xl font-semibold\">{{funding_requested_xaf_fmt}} XAF</div></div></div></div>"
  }
  