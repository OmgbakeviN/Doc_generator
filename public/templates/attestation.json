{
    "id": "attestation",
    "name": "Attestation de Travail",
    "category": "Administratif",
    "thumbnail": "/attestation-thumb.png",
    "schema": [
      { "key": "company_name", "label": "Nom de l'entreprise", "type": "text", "required": true },
      { "key": "employee_name", "label": "Nom de l'employé", "type": "text", "required": true },
      { "key": "employee_role", "label": "Fonction", "type": "text", "required": true },
      { "key": "start_date", "label": "Date d'entrée", "type": "date", "required": true },
      { "key": "issue_date", "label": "Date d'émission", "type": "date", "required": true },
      { "key": "city", "label": "Ville", "type": "text", "required": true }
    ],
    "defaults": {
      "fontFamily": "\"Times New Roman\", Times, serif",
      "fontSize": 12,
      "lineHeight": 1.5,
      "accent": "#111827"
    },
    "template": "<div class=\"w-[210mm] min-h-[297mm] mx-auto p-12 bg-white\"><div class=\"text-center mb-6\"><h1 class=\"text-2xl font-semibold\">Attestation de Travail</h1><div class=\"h-0.5 w-40 mx-auto mt-3\" style=\"background: {{accent}}\"></div></div><p class=\"mb-4\">Je soussigné, représentant de <strong>{{company_name}}</strong>, atteste que <strong>{{employee_name}}</strong> occupe le poste de <strong>{{employee_role}}</strong> depuis le <strong>{{start_date}}</strong>.</p><p class=\"mb-4\">La présente attestation est délivrée pour servir et valoir ce que de droit.</p><div class=\"mt-12 flex justify-between\"><div></div><div class=\"text-right\"><p>{{city}}, le {{issue_date}}</p><p class=\"mt-16\">Signature</p></div></div></div>"
}
